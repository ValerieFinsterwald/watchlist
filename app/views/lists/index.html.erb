<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_url('banner.png') %>')">
  <h1>Save any kind of movies</h1>
  <h3>Your easy ordered watchlist</h3>
</div>
  <div class="container">
  <div class="index-header">
    <h3>My Lists</h3>
    <p class="btn btn-rose"><%=link_to "Create List", new_list_path%></p>
  </div>
  <ul class="list cards">
    <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key%>')">
    <% else %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_url('genre.png') %>')">
    <% end %>
        <li><%= link_to list.name, list_path(list) %></li>
      </div>
    <% end %>
  </ul>
</div>
